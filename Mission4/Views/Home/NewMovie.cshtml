@{
    ViewData["Title"] = "New Movie Form";
}

@model Mission4.Models.ApplicationResponse

<div>
    <form method="post">
        <label asp-for="Category">Category: </label>
        <input asp-for="Category" /><br />
        <label>Title: </label>
        <input asp-for="Title" /><br />
        <label>Year: </label>
        <input asp-for="Year" /><br />
        <label>Director: </label>
        <input asp-for="Director" /><br />
        <label>Rating: </label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />
        <label>Edited: </label>
        <select asp-for="Edited">
            <option value="true">True</option>    
            <option value="false">False</option>
        </select><br />
        <label>Lent To: </label>
        <input asp-for="LentTo" /><br />
        <label>Notes: </label>
        <input asp-for="Notes" /><br />
        <button type="submit">Submit Movie</button>
    </form>
</div>